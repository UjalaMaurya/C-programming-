#include<stdio.h>
int main()
{
 
 //Catalog
 
printf("Pick an item: \n 1. Crispy baby corn \n 2. Pizza \n 3. Burger \n 4. Taco \n 5. Hot dog \n\n");

//Read the user choice

int choice;

scanf("%d",&choice); 

// Display the result based on choice

switch(choice)
{
case 1:

printf("The picked food item is\"Crispy baby corn\" \nand it's' price is : 200rs ");
           break;
case 2:

printf("The picked food item is\"Pizza\" \nand it's' price is : 340rs ");
           break;
case 3:

printf("The picked food item is\"Burger\" \nand it's' price is : 75rs .");
          break;
case 4:

printf("The picked food item is\"Taco\" \nand it's' price is : 150rs ");
         break;
case 5:

printf("The picked food item is\"Hot dog\" \nand it's' price is : 130rs .");
          break;
default :
 printf("Invalid choice");
}
}  
                       
